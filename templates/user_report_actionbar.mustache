{{!
    @template mod_exescorm/report_actionbar
    Actions bar for the user reports page UI.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * see mod/exescorm/classes/output/userreportsactionbar.php
    Example context (json):
    {
        "userreport": {
            "id": "url_select_test",
            "options": [
                {"name": "Learning objects", "value": "/mod/exescorm/report/userreport.php?id=70&user=13&attempt=1"},
                {"name": "Interactions", "value": "/mod/exescorm/report/userreportinteractions.php?id=70&user=13&attempt=1"}
            ]
        },
        "backurl": "http://localhost/moodle/mod/exescorm/report.php?id=70&mode=interactions",
        "heading": "Sub page heading"
    }
}}
<form method="post" action="your-action-url" class="d-flex flex-wrap align-items-center" id="your-form-id">
    <div class="row">
        <div class="navitem">
            <a class="btn btn-secondary mr-2" href="{{backurl}}">{{#str}}back, core {{/str}}</a>
        </div>
        {{#userreport}}
            <div class="navitem">
                {{>core/url_select}}
            </div>
        {{/userreport}}
    </div>
</form>
{{#heading}}<h2>{{heading}}</h2>{{/heading}}
