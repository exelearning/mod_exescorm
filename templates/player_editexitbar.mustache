{{!
    @template mod_exescorm/player_exitbar
    Actions bar for the user reports page UI.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * action
    Example context (json):
    {
        "action": "http://localhost/moodle/mod/exescorm/report.php?id=70&mode=interactions"
    }
}}
<div class="d-flex flex-row-reverse mb-2">
    <a class="btn btn-secondary" href="{{{returnaction}}}">
        {{#str}}exitactivity, mod_exescorm{{/str}}
    </a>
    {{#editaction}}
        {{#hasgrades}}
            <button type="button" class="btn btn-secondary mr-1" data-action="edit-exescorm" data-editurl="{{{editaction}}}">
                {{#str}}typeexescormedit, mod_exescorm{{/str}}
            </button>
        {{/hasgrades}}
        {{^hasgrades}}
            <a class="btn btn-secondary mr-1" href="{{{editaction}}}">
                {{#str}}typeexescormedit, mod_exescorm{{/str}}
            </a>
        {{/hasgrades}}
    {{/editaction}}
</div>

{{#editaction}}
    {{#js}}
        require(['mod_exescorm/edit_confirmation'], (module) => module.init());
    {{/js}}
{{/editaction}}
